  "scripts": {
    "build": "microbundle --entry src/index.ts",
    "dev": "microbundle watch --entry src/index.ts",
    "test": "jest"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "angular": "~1.3.20",
    "angular-mocks": "~1.3.20",
